<div class="owl-carousel slide-one-item">



<% @banners.each do |banner| %>
  <div class="site-section-cover overlay img-bg-section" style="background-image: url(<%= rails_blob_url(banner.image)%>); " >
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-12 col-lg-7">
          <h1 data-aos="fade-up" data-aos-delay="">
            <%= banner.title_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru' %>
            <%= banner.title_ru if params[:locale] == 'ru' %>
            <%= banner.title_tm if params[:locale] == 'tm' %>
          </h1>
          <p class="mb-5" data-aos="fade-up" data-aos-delay="100">
            <%= banner.text_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru' %>
            <%= banner.text_ru if params[:locale] == 'ru' %>
            <%= banner.text_tm if params[:locale] == 'tm' %>
          </p>
          <p data-aos="fade-up" data-aos-delay="200">
            <%= link_to banner.link + "#{params[:locale]}", class:'btn btn-outline-white border-w-2 btn-md' do %>
            <%= t('see')%>
            <% end %>
          </p>
        </div>
      </div>
    </div>

  </div>
<% end %>
