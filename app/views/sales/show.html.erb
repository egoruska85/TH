<% if params[:id] == '1' %>
  <% @salesauto.each do |sale| %>
    <% if sale.image.attached? %>
      <%= image_tag(sale.image)%>
    <% else %>
      <%= image_tag(@no) %>
    <% end %>
    <%= sale.title_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru' %><%= link_to 'Подробнее', [:more, sale] if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru' %>
